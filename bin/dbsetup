#!/usr/bin/env bash
# quantdb-dbsetup [PORT] [DATABASE]
set -e
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve all symlinks
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # resolve relative symlinks
done
ABS_PATH="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

SQL="${ABS_PATH}/../sql"
RESOURCES="${ABS_PATH}/../resources"

if [ -z $1 ]; then
    PORT=5432
else
    PORT=$1
fi

if [ -z $2 ]; then
    #DATABASE=$(python -c 'from quantdb.config import auth; print(auth.get("test-database"))')
    DATABASE=quantdb_test
else
    DATABASE=$2
fi

if [ -z $3 ]; then
    HOST=localhost
else
    HOST=$3
fi

SETUP=0
TESTING=0

if test ${SETUP} -eq 0; then

# postgres setup (these need to fail loudly)
psql -U postgres -h ${HOST} -p $PORT -d postgres  -f "${SQL}/postgres.sql" -v ON_ERROR_STOP=on -v database=$DATABASE
#psql -U postgres -h ${HOST} -p $PORT -d $DATABASE -f "${SQL}/extensions.sql" -v ON_ERROR_STOP=on

# quantdb-admin setup
psql -U quantdb-admin -h ${HOST} -p $PORT -d $DATABASE -f "${SQL}/schemas.sql" -v ON_ERROR_STOP=on
psql -U quantdb-admin -h ${HOST} -p $PORT -d $DATABASE -f "${SQL}/tables.sql" -v ON_ERROR_STOP=on
psql -U quantdb-admin -h ${HOST} -p $PORT -d $DATABASE -f "${SQL}/permissions.sql" -v ON_ERROR_STOP=on -v database=$DATABASE

fi

if test ${TESTING} -eq 0; then

# testing
psql -U quantdb-user -h ${HOST} -p $PORT -d $DATABASE -f "${SQL}/test.sql" -v database=$DATABASE -v ON_ERROR_STOP=on

fi
